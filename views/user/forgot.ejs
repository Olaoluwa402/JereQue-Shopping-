<div class="row w-50 mx-auto formtag">
		<form action="/forgot" method="POST" >
			<h2>Forgot Password</h2>
			<div class="form-group">
				<label for="email"></label>
				<input type="email" name="email" autofocus class="form-control" placeholder="Please enter your email">
			</div>
			<div class="form-group">
				<input type="submit" class="btn" style="background: #e91e63; color:white "value="Reset Password">
			</div>
			<input class="form-control"  type="hidden" name="_csrf" value="<%= csrfToken%>">
		</form>
</div>
