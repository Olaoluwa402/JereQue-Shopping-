
<diV class="container">
<div class="row">

	<div class=" w-50 mx-auto formtag" >
		<h2 style="text-align: center"> Update Profile</h2>
		
		<form action="/users/<%= user._id %>?_method=PUT" method="POST">
			<div class="form-group mb-0">
				<label for="fname">First Name</label>
				<input class="form-control" id="fname" type="text" name="firstName" placeholder="" value="<%= user.firstName%>">
			</div>
			<div class="form-group mb-0">
				<label for="lname">Last Name</label>
				<input class="form-control" id="lname" type="text" name="lastName" placeholder="" value="<%= user.lastName%>">
			</div>
			<div class="form-group mb-0">
				<label for="email">Email</label>
				<input class="form-control" id="email" type="email" name="email" placeholder="" value="<%= user.email%>">
			</div>

			<input class="form-control"  type="hidden" name="_csrf" value="<%= csrfToken%>">
		    <button class="btn  btn-block" style="background: #e91e63; color:white " type="submit">Update Profile</button>
		</form>
		
			<div class="mt-2"><a href="/users/<%=user.id%>"><i class="fa fa-arrow-left"></i> Go back</a></div>
			
	</div> 
 </div>
</diV>
