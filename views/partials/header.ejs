<script type="text/javascript">
    $(document).ready(() => {     

        $.ajax({
            url: "/category/partials",
            type:"GET",
            datatype: "json",
            success: (categories) =>{
              let html ='';
              categories.forEach(category => { 
                 html +=  '<li>' + '<a href="/category/' + category._id + '"' + '>' + category.name + '</a>' + '</li>';
              });
              $("#allCategory").html(html);
            }

        });
        
    });

</script>

